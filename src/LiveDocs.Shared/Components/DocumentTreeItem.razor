@inject Microsoft.JSInterop.IJSRuntime _JSRuntime

@if (Level == 1)
{
    <li class="nav-item px-3">
        <a @onclick="() => ScrollTo(Url)">@Text</a>
    </li>
} else
{
    <ul class="ml-3 pl-0">
        <DocumentTreeItem Text="@Text" Url="@Url" Level="@(--Level)"></DocumentTreeItem>
    </ul>
}

@code {
    [Parameter]
    public string Text { get; set; }

    [Parameter]
    public string Url { get; set; }

    [Parameter]
    public int Level { get; set; }

    private async Task ScrollTo(string id)
    {
        await _JSRuntime.InvokeAsync<bool>("scrollToElementId", new[] { id });
    }
}